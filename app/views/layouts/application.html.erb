<!DOCTYPE html>
<html>
	<head>
	  <title>Resquery</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	  <%= favicon_link_tag 'favicon.ico' %>
	  <link href='http://fonts.googleapis.com/css?family=Noto+Sans:400,700' rel='stylesheet' type='text/css'>
	  <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link href="assets/css/bootstrap-responsive.css" rel="stylesheet">
	
	</head>	
	<body>
	<!-- Hi There! Thanks for looking under the hood! -->
	<!-- We hope that Resquery helps you !-->
	<% if signed_in? %>
		<%= render 'layouts/signed_in_header'%>
		<%# tests with full width images outside of container%>
		<%# if @pageimage != nil %>
		<% if @show_hero == true %>
			<%= render 'layouts/page_image'%>
		<% end %>
		<% if !@large_slides.blank?  %>
			<%= resquery_format(@large_slides, {}, :sanitize => false)%>
		<%end %>
		<%# end %>
		<%# if @show_dashboard == true %>
			<%#= render 'layouts/dashboard_top'%>
		<% #end %>
		
		
		<div class="container">
			<div class="row-fluid">
				<div class="span12">
			   	<%= yield %>
				</div>
			</div>
		</div>

	<% else %>	
		<%=render 'layouts/signed_out_header'%>
		<%= yield %>			
		<%=render 'layouts/footer'%>
	<% end %>

	<script>
	  var editor = new wysihtml5.Editor("wysihtml5-textarea", { // id of textarea element
	    toolbar:      "wysihtml5-toolbar", // id of toolbar element
	    stylesheets:  "<%= stylesheet_path('wysiwyg') %>", // optional, css to style the editor's content
		 useLineBreaks: false,

	    parserRules:  advanced // defined in parser rules set,

	  });
	</script>

	</body>
</html>
