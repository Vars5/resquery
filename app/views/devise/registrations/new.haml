-# The Normal Sign in form which is disabled by 'if false'
- if false
	.main-information.pad-top
		.container.pad-top
			.row.pad-top
				.offset4.span4
					.center-alignment.pad-bottom
						%h3(class="light-aqua-text") Sign Up
						%br
						= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
							.row-fluid.width-adjust
								.span6
									= f.text_field :first_name, :placeholder =>"First Name"
								.span6
									= f.text_field :last_name, :placeholder =>"Last Name"
							= f.email_field :email, :autofocus => true, :placeholder => "Email"
							= f.password_field :password, :placeholder => "Password"
							= f.password_field :password_confirmation, :placeholder => "Password Confirmation"
							= f.submit "Sign up"
						
						= render "devise/shared/links"

-# This is what is displayed for the closed-beta to stop sign-ups
.main-information.pad-top
	.container.pad-top
		.row.pad-top
			.offset1.span10
				.center-alignment.pad-bottom
					= link_to image_tag('book.png'), '#'
					%h3 Closed Beta at the moment, sorry!
					If you're want to find out about us, we'll be happy to hear from you at:
					= mail_to "team@resquery.com", 'team@resumequery.com'
					