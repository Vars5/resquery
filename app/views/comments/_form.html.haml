
.pad-top
	.comment-form
		.wysihtml5
			= simple_form_for comment, :remote => true do |f|
				= f.input :body, as: :text, :input_html => { :class => "wysihtml5", :placeholder => "Quick Reply" }, :label => false
				= f.input :commentable_id, :as => :hidden, :value => comment.commentable_id
				= f.input :commentable_type, :as => :hidden, :value => comment.commentable_type
				= f.button :submit, :class => "comment-button", :disable_with => "Submittingâ€¦"
