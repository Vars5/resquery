.dashboard
	.row-fluid
		.span8
			%h3
				%span(class="light-grey") rQ/ 
				%span(class="main-title-text")= @group.name 
			%p(class="small-text")= @group.description

		.span4
			.group-members
				.pull-right
					=@users.count
					members
					-#link_to "#{@users.count} Group Members", users_group_path


	%hr 

.row-fluid
	.span8
		.updates
			%h4
				Discussions
				&nbsp &nbsp &nbsp
				=link_to "Add a New Discussion", new_group_discussion_path(@group), :class => "yellow-button"
			

	
		.discussions
			-@discussions.each do |discussion|
				.discussion-unit
					%b(class="discussion-title")
						=link_to discussion.title, [@group, discussion]
					\ -
					=link_to truncate((strip_tags(discussion.description)), :length => 140)
					.pull-right
						=# discussion.created_at.strftime("%e %b")

		- if can? :manage, :all
			.membership_invite_form
				=simple_form_for :invite, as: :memberships, url: memberships_path(:invite) do |f|
					=f.input :email
					=f.hidden_field :group_id, value: params[:id]
					=f.button :submit, "Invite Person"

	.span4
		
		.link-feed-title
			%b Quality Links
				

		.link-feed
			%ul(class="unstyled")
				-@links.each do |link|
					%li
						=link_to link.title, link.link, :target => "_blank"
						.tiny-text
							submitted by
							=full_name(link.user_id)
					
		.link-feed-title
			%b Add a link
		
		.link-feed	
			.link-form
				=form_for :link, as: :links, url: links_path(:link) do |f|
					=f.text_field :title, :placeholder => "title"
					=f.text_field :link, :placeholder => "url"
					=f.hidden_field :user_id, value: current_user.id
					=f.hidden_field :group_id, value: params[:id]
					=f.submit "Add Link", :class => "sign-up-button"
