.hidden
	%h3(class="main-title-text")= @group.name 


.search-area.hidden
	.row-fluid
		.span8
			= @group.description
		.span4
			.pull-right
				=form_for :test do |f|
					.search-box
						=f.text_field :test, :placeholder => "Search for items"


.test
	- @topics.each do |topic|
		.row-fluid.topic-hub
			.span4.topic-area
				%h4= topic.name
				%p= topic.description 
	
			.span8

				- topic.get_articles.each_slice(4).to_a.each do |group|
					.row-fluid
						- group.each do |article|
							.span3.article-box
								=link_to [@group, article] do  
									%span(class="article-title-box")= article.name
									%p(class="article-box-text")= strip_tags(truncate((article.body),length: 85))
