= simple_form_for @group do |f|	
	.new-article-title
		= f.input :name, required: true, as: :text
	= f.input :description
	= f.hidden_field :user_id, :value => current_user.id
	= f.fields_for :memberships do |membership|
		= membership.hidden_field :user_id, :value => current_user.id
		= membership.hidden_field :group_id, :value => params[:id] 
		= membership.hidden_field :leader, :value => true
		= membership.hidden_field :owner, :value => true
	=f.button :submit